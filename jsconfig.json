  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonJS",
    "target": "es2018", 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, 
    "baseUrl": "."
